@model Usuario 
@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastro de Usuarios</h1>

@if(Model != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<form asp-action="cadastrar">
    <div class="form-group">
        <label for="id-nome">Nome</label>
        <input type="text" name="nome" class="form-control" id="id-nome" />
    </div>
    <div class="form-group">
        <label for="id-nome">Sobrenome</label>
        <input type="text" name="sobrenome" class="form-control" id="id-sobrenome" />
    </div>
    <div class="form-group">
        <label for="id-nome">Idade</label>
        <input type="text" name="idade" class="form-control" id="id-idade" />
    </div>
    <div class="form-group">
        <label for="id-nome">CPF</label>
        <input type="text" name="cpf" class="form-control" id="id-idade" />
    </div>
    <div class="form-group">
        <label for="id-nome">Data De Nascimento</label>
        <input type="date" name="dtNascimento" class="form-control" id="id-datanasc" />
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-outline-success" />
    <a asp-controller="Home" asp-action="index" class="btn btn-outline-primary"> Voltar</a>
</form>
